#!/bin/bash

# 检查是否传入了至少一个文件或目录
if [ "$#" -lt 1 ]; then
    echo "Usage: $0 <file_or_directory1> [<file_or_directory2> ... <file_or_directoryN>]"
    exit 1
fi

# 确认删除操作
read -p "Are you sure you want to delete all specified files and directories? (y/n): " confirmation
if [ "$confirmation" != "y" ]; then
    echo "Operation cancelled."
    exit 0
fi

# 遍历所有传入的文件和目录
for TARGET in "$@"; do
    # 检查是否为根目录
    if [ "$TARGET" = "/" ]; then
        echo "Error: Cannot delete the root directory."
        exit 1
    fi

    # 删除目标及其内容（不判断是否为文件或目录）
    echo "Deleting $TARGET..."
    rm -rf "$TARGET"

    # 检查删除操作是否成功
    if [ $? -eq 0 ]; then
        echo "$TARGET deleted successfully."
    else
        echo "Error: Failed to delete $TARGET."
    fi
done

